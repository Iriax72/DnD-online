{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "checkJs": true,
    "strict": false,
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "js/**/*",
    "public/**/*",
    "index.php",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "dist"
  ]
}
